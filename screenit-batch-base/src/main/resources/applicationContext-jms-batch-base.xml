<beans xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns="http://www.springframework.org/schema/beans"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-4.1.xsd">

    <bean id="startJobMessageListener" class="nl.rivm.screenit.batch.jms.listener.JMSStartJobListener">
        <constructor-arg type="nl.rivm.screenit.model.enums.BatchApplicationType">
            <ref bean="batchApplicationType"/>
        </constructor-arg>
    </bean>

    <bean id="jobStatusMessageListener" class="nl.rivm.screenit.batch.jms.listener.JMSJobStatusListener"/>

    <bean id="quartzListener" class="nl.rivm.screenit.batch.jms.listener.JMSQuartzListener"/>

    <bean id="jobStatusJmsContainer"
          class="org.springframework.jms.listener.DefaultMessageListenerContainer">
        <property name="connectionFactory" ref="jmsFactory"/>
        <property name="destination" ref="batchServerStatusDestination"/>
        <property name="messageListener" ref="jobStatusMessageListener"/>
        <property name="sessionTransacted" value="true"/>
    </bean>

    <bean id="quartzJmsContainer"
          class="org.springframework.jms.listener.DefaultMessageListenerContainer">
        <property name="connectionFactory" ref="jmsFactory"/>
        <property name="destination" ref="quartzDestination"/>
        <property name="messageListener" ref="quartzListener"/>
        <property name="sessionTransacted" value="true"/>
    </bean>

</beans>
