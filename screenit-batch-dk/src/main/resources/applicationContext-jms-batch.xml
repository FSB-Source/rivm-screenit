<beans xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	   xmlns="http://www.springframework.org/schema/beans"
	   xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-4.1.xsd">

	<bean id="verwerkIFobtBerichtListener" class="nl.rivm.screenit.batch.jms.listener.JMSVerwerkIFobtBerichtListener"/>
	<bean id="verwerkColonCdaBerichtListener" class="nl.rivm.screenit.batch.jms.listener.JMSVerwerkCdaBerichtListener">
		<property name="bvo" value="COLON"/>
	</bean>

	<bean id="verwerkIFobtBerichtListenerContainer" class="org.springframework.jms.listener.DefaultMessageListenerContainer">
		<property name="concurrentConsumers" value="1"/>
		<property name="connectionFactory" ref="jmsFactory"/>
		<property name="destination" ref="verwerkIFobtBerichtDestination"/>
		<property name="messageListener" ref="verwerkIFobtBerichtListener"/>
		<property name="sessionTransacted" value="true"/>
	</bean>

	<bean id="verwerkCdaBerichtListenerContainer" class="org.springframework.jms.listener.DefaultMessageListenerContainer">
        <property name="concurrentConsumers" value="1"/>
        <property name="connectionFactory" ref="jmsFactory"/>
        <property name="destination" ref="verwerkColonCdaBerichtDestination"/>
        <property name="messageListener" ref="verwerkColonCdaBerichtListener"/>
        <property name="sessionTransacted" value="true"/>
    </bean>

    <bean id="colonJobJmsContainer"
          class="org.springframework.jms.listener.DefaultMessageListenerContainer">
        <property name="connectionFactory" ref="jmsFactory"/>
        <property name="destination" ref="colonJobsDestination"/>
        <property name="messageListener" ref="startJobMessageListener"/>
        <property name="sessionTransacted" value="true"/>
    </bean>

    <bean id="batchApplicationType" class="java.lang.String">
        <constructor-arg value="COLON"/>
    </bean>

</beans>
