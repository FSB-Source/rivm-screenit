    <artifactId>screenit-webservice-broker</artifactId>
    <packaging>war</packaging>
    <name>screenit-webservice-broker</name> 
    <description>Screenit WebService broker</description>

    <build>
        <plugins>            
            <plugin>
                <groupId>org.apache.cxf</groupId>
                <artifactId>cxf-codegen-plugin</artifactId>
                <executions>
                    <execution>
                        <id>generate-sources</id>
                        <phase>generate-sources</phase>
                        <configuration>
                            <wsdlOptions>
                                <wsdlOption>
                                    <wsdl>${basedir}/src/main/resources/wsdl/InpakcentrumKoppelService.wsdl</wsdl>
                                    <bindingFiles>
                                        <bindingFile>${basedir}/src/main/resources/bindings/jaxb-bindings-inpak.xml</bindingFile>
                                        <bindingFile>${basedir}/src/main/resources/bindings/jaxws-bindings-inpak.xml</bindingFile>
                                    </bindingFiles>
                                </wsdlOption>
                                <wsdlOption>
                                    <wsdl>${basedir}/src/main/resources/wsdl/ProvideDocument.wsdl</wsdl>
                                    <bindingFiles>
                                        <bindingFile>${basedir}/src/main/resources/bindings/jaxb-bindings-pd.xml</bindingFile>
                                        <bindingFile>${basedir}/src/main/resources/bindings/jaxws-bindings-pd.xml</bindingFile>
                                    </bindingFiles>
                                </wsdlOption>
                                <wsdlOption>
                                    <wsdl>${basedir}/src/main/resources/wsdl/OrganisatieBoomService.wsdl</wsdl>
                                    <bindingFiles>
                                        <bindingFile>${basedir}/src/main/resources/bindings/jaxb-bindings-organisatieboom.xml</bindingFile>
                                        <bindingFile>${basedir}/src/main/resources/bindings/jaxws-bindings-organisatieboom.xml</bindingFile>
                                    </bindingFiles>
                                </wsdlOption>
                                <wsdlOption>
                                    <wsdl>${basedir}/src/main/resources/wsdl/VragenlijstAntwoordenService.wsdl</wsdl>
                                    <bindingFiles>
                                        <bindingFile>${basedir}/src/main/resources/bindings/jaxb-bindings-vrla.xml</bindingFile>
                                        <bindingFile>${basedir}/src/main/resources/bindings/jaxws-bindings-vrla.xml</bindingFile>
                                    </bindingFiles>
                                </wsdlOption>
                                <wsdlOption>
                                    <wsdl>${basedir}/src/main/resources/wsdl/VragenlijstDefinitieService.wsdl</wsdl>
                                    <bindingFiles>
                                        <bindingFile>${basedir}/src/main/resources/bindings/jaxb-bindings-vrld.xml</bindingFile>
                                        <bindingFile>${basedir}/src/main/resources/bindings/jaxws-bindings-vrld.xml</bindingFile>
                                    </bindingFiles>
                                </wsdlOption>
                                <wsdlOption>
                                    <wsdl>${basedir}/src/main/resources/wsdl/LabformulierService.wsdl</wsdl>
                                    <bindingFiles>
                                        <bindingFile>${basedir}/src/main/resources/bindings/jaxb-bindings-labformulier.xml</bindingFile>
                                        <bindingFile>${basedir}/src/main/resources/bindings/jaxws-bindings-labformulier.xml</bindingFile>
                                    </bindingFiles>
                                </wsdlOption>								
                            </wsdlOptions>
                            <encoding>UTF-8</encoding>
                        </configuration>
                        <goals>
                            <goal>wsdl2java</goal>
                        </goals>
                    </execution>
                </executions>
                <dependencies>
                    <dependency>
                        <groupId>xerces</groupId>
                        <artifactId>xercesImpl</artifactId>
                    </dependency>
                    <dependency>
                        <groupId>org.daisy.libs</groupId>
                        <artifactId>saxon-he</artifactId>
                    </dependency>
                </dependencies>
            </plugin>
            <plugin>
                <groupId>org.codehaus.mojo</groupId>
                <artifactId>jaxb2-maven-plugin</artifactId>
                <executions>
                    <execution>
                        <id>xjc</id>
                        <goals>
                            <goal>xjc</goal>
                        </goals>
                    </execution>
                </executions>
                <configuration>
                    <schemaDirectory>${basedir}/src/main/resources/schemas</schemaDirectory>
                    <schemaFiles>
                        KOPPEL_DATA.xsd
                    </schemaFiles>
                    <extension>true</extension>
                </configuration>
                <dependencies>
                    <dependency>
                        <groupId>com.sun.xml.bind</groupId>
                        <artifactId>jaxb-xjc</artifactId>
                    </dependency>
                    <dependency>
                        <groupId>com.sun.xml.bind</groupId>
                        <artifactId>jaxb-impl</artifactId>
                    </dependency>
                </dependencies>
            </plugin>
        </plugins>
    </build>

