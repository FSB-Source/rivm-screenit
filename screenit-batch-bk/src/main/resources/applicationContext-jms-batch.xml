<beans xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns="http://www.springframework.org/schema/beans"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-4.1.xsd">

    <bean id="verwerkMammaIMSBerichtListener" class="nl.rivm.screenit.batch.jms.listener.JMSVerwerkIMSBerichtListener"/>
    <bean id="verwerkMammaCdaBerichtListener" class="nl.rivm.screenit.batch.jms.listener.JMSVerwerkCdaBerichtListener"/>

    <bean id="mammaJobJmsContainer" class="org.springframework.jms.listener.DefaultMessageListenerContainer">
        <property name="connectionFactory" ref="jmsFactory"/>
        <property name="destination" ref="mammaJobsDestination"/>
        <property name="messageListener" ref="startJobMessageListener"/>
        <property name="sessionTransacted" value="true"/>
    </bean>

    <bean id="verwerkIMSBerichtListenerContainer" class="org.springframework.jms.listener.DefaultMessageListenerContainer">
        <property name="concurrentConsumers" value="1"/>
        <property name="connectionFactory" ref="jmsFactory"/>
        <property name="destination" ref="verwerkMammaIMSBerichtDestination"/>
        <property name="messageListener" ref="verwerkMammaIMSBerichtListener"/>
        <property name="sessionTransacted" value="true"/>
    </bean>
    
    <bean id="verzamelOnderzoekDataBerichtListener" class="nl.rivm.screenit.batch.jms.listener.JMSVerzamelOnderzoekDataBerichtListener"/>

    <bean id="verzamelOnderzoekDataBerichtListenerContainer" class="org.springframework.jms.listener.DefaultMessageListenerContainer">
        <property name="concurrentConsumers" value="1"/>
        <property name="connectionFactory" ref="jmsFactory"/>
        <property name="destination" ref="verzamelOnderzoekDataBerichtDestination"/>
        <property name="messageListener" ref="verzamelOnderzoekDataBerichtListener"/>
        <property name="sessionTransacted" value="true"/>
    </bean>

    <bean id="uploadBeeldenVerzoekBerichtListener" class="nl.rivm.screenit.batch.jms.listener.JMSUploadBeeldenBerichtListener"/>

    <bean id="uploadBeeldenVerzoekBerichtListenerContainer" class="org.springframework.jms.listener.DefaultMessageListenerContainer">
        <property name="concurrentConsumers" value="1"/>
        <property name="connectionFactory" ref="jmsFactory"/>
        <property name="destination" ref="uploadBeeldenVerzoekBerichtDestination"/>
        <property name="messageListener" ref="uploadBeeldenVerzoekBerichtListener"/>
        <property name="sessionTransacted" value="true"/>
    </bean>

    <bean id="batchApplicationType" class="java.lang.String">
        <constructor-arg value="MAMMA"/>
    </bean>
    
     <bean id="verwerkCdaBerichtListenerContainer" class="org.springframework.jms.listener.DefaultMessageListenerContainer">
        <property name="concurrentConsumers" value="1"/>
        <property name="connectionFactory" ref="jmsFactory"/>
        <property name="destination" ref="verwerkMammaCdaBerichtDestination"/>
        <property name="messageListener" ref="verwerkMammaCdaBerichtListener"/>
        <property name="sessionTransacted" value="true"/>
    </bean>
</beans>
