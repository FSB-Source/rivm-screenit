<configuration scan="true" scanPeriod="10 seconds">

    <if condition='isDefined("jetty.logging.dir")'>
        <then>
            <appender name="FILE" class="ch.qos.logback.core.rolling.RollingFileAppender" append="true">
                <file>${jetty.logging.dir}/screenit-huisartsenportaal.log</file>
                <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
                    <fileNamePattern>${jetty.logging.dir}/screenit-huisartsenportaal_%d{yyyy-MM-dd}.log.gz</fileNamePattern>
                </rollingPolicy>
                <encoder name="ch.qos.logback.classic.encoder.PatternLayoutEncoder">
                    <pattern>%d{yyyyMMdd HH:mm:ss.SSS}[%thread] %-5level %-36.36c{36} - %msg%n</pattern>
                </encoder>
            </appender>
        </then>
        <else>
            <appender name="FILE" class="ch.qos.logback.core.helpers.NOPAppender"/>
        </else>
    </if>

    <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
        <encoder name="ch.qos.logback.classic.encoder.PatternLayoutEncoder">
            <pattern>%d{yyyyMMdd HH:mm:ss.SSS}[%thread] %-10([A:%X{A}]) %-5level %logger{36} - %msg%n</pattern>
        </encoder>
    </appender>

    <logger name="nl" level="INFO"/>
    <logger name="org.apache" level="WARN"/>
    <logger name="org.apache.activemq" level="INFO"/>
    <logger name="org.apache.cxf" level="INFO"/>
    <logger name="org.apache.wicket" level="INFO"/>
    <logger name="org.wicketstuff.security" level="INFO"/>
    <logger name="org.hibernate" level="INFO"/>
    <logger name="org.hibernate.SQL" level="INFO"/>
    <logger name="net.sf.ehcache" level="INFO"/>
    <logger name="com.mchange.v2" level="WARN"/>
    <logger name="org.springframework" level="INFO"/>
    <logger name="nl.topicuszorg" level="INFO"/>
    <logger name="nl.rivm.screenit.huisartsenportaal.validator" level="DEBUG"/>
    <logger name="nl.rivm.screenit.huisartsenportaal.config.translators.HuisartsportaalLoggingExceptionTranslator" level="INFO"/>

    <root level="info">
        <appender-ref ref="STDOUT"/>
        <appender-ref ref="FILE"/>
    </root>


</configuration>
